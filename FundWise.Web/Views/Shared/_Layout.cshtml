<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] FundWise</title>
    <link rel="icon" href="https://img.icons8.com/3d-fluency/94/fund-accounting.png" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/mdbootstrap/css/mdb.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FundWise.Web.styles.css" asp-append-version="true" />
    <link href="~/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img width="55" height="55" src="https://img.icons8.com/3d-fluency/94/fund-accounting.png" alt="fund-accounting" />
                    FundWise
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="sidebar">
        <h2>SideBar</h2>
        <ul>
            <li><a class="button" asp-controller="Home" asp-action="Index"> Home</a></li>
            <li><a class="button" asp-controller="Users" asp-action="Index">Users</a></li>
            <li><a class="button" asp-controller="Portfolios" asp-action="Index">Portfolios</a></li>
            <li><a class="button" asp-controller="Transactions" asp-action="Index">Transactions</a></li>
            <li><a class="button" asp-controller="Assets" asp-action="Index">Assets</a></li>
            <li><a class="button" asp-controller="Financialinformation" asp-action="Index">Financial information</a></li>
            <li><a class="button" asp-controller="Investmentstrategies" asp-action="Index">Investment strategies</a></li>
        </ul>
    </div>
     
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - FundWise.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    @* <script src="~/bootstrap.min.js"></script> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/mdbootstrap/js/mdb.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
